<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_horizontal|fill_vertical"
    android:orientation="vertical">



    <LinearLayout
        android:id="@+id/layort00"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="horizontal">

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <TextView
            android:id="@+id/textViewmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:text="Мін. темп.: 19.0"
            android:textColor="@color/design_default_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_miUp"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:onClick="sendMessage_button_minUp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_action_name_up" />

        <ImageButton
            android:id="@+id/button_minDown"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="55dp"
            android:onClick="sendMessage_button_minDown"
            app:srcCompat="@drawable/ic_action_name_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewmax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="35dp"
            android:text="Макс. темп.: 19.0"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_maxUp"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="0dp"
            android:onClick="sendMessage_button_maxUp"
            app:srcCompat="@drawable/ic_action_name_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/button_maxDown"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginStart="305dp"
            android:layout_marginTop="55dp"
            android:onClick="sendMessage_button_maxDown"
            app:srcCompat="@drawable/ic_action_name_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox_1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:onClick="sendMessage_button_Accuracy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="точність" />

        <CheckBox
            android:id="@+id/checkBox_2"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:onClick="sendMessage_button_AlarmIgnore"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="ігнорувати" />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sendMessage_button_Cancel"
            android:text="Cancel" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sendMessage_button_Save"
            android:text="Save" />

        <Button
            android:id="@+id/button_saveall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="sendMessage_button_SaveAll"
            android:text="Save to all" />
    </LinearLayout>


</LinearLayout>